<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.StackPane?>
<?import javafx.scene.control.ScrollPane?>

<StackPane fx:id="placeHolder" styleClass="calendar-view" xmlns="http://javafx.com/javafx/17"
    xmlns:fx="http://javafx.com/fxml/1">
    <ScrollPane fitToWidth="true" styleClass="calendar-scroll-pane">
        <VBox spacing="10">
            <GridPane fx:id="calendarGrid" hgap="10" vgap="10" styleClass="calendar-grid" VBox.vgrow="ALWAYS">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10" />
                </padding>
            </GridPane>
            <VBox fx:id="eventList" spacing="5" styleClass="calendar-event-list" VBox.vgrow="NEVER">
                <padding>
                    <Insets top="10" right="10" bottom="10" left="10" />
                </padding>
            </VBox>
        </VBox>
    </ScrollPane>
</StackPane> 